@page "/"


<h3>Login til Kylling Og Co</h3>
<h3></h3>
<input type="number" @bind-value="UserInput" />
<button @onclick="Click" type="button">Create login</button>
<p style="@validation color:red;">Phone number is already created!</p>

@code {


    [Inject]
    private NavigationManager navManager { get; set; }

    List<int> PhoneNumberList = new List<int>() { 11111111 };

    private int UserInput { get; set; }

    private string validation { get; set; } = "display:none;";


    private void Click(MouseEventArgs mouseEventArgs)
    {
        if (PhoneNumberList.Contains(UserInput))
        {
            validation = "display:block;";
        }
        else
        {
            AddToList(UserInput);
            navManager.NavigateTo("/KyllingLoyalty");
            validation = "display:none;";
        }





    }
    private void AddToList(int i)
    {
        PhoneNumberList.Add(i);

    }
}

